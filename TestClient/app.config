<?xml version="1.0"?>

<configuration>
    <configSections>
        <section name="CassandraSharp"
                 type="CassandraSharp.SectionHandler, CassandraSharp" />
        <section name="log4net"
                 type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    </configSections>

    <CassandraSharp logger="TestClient.Logger4Log4Net, TestClient">
        <Cluster name="MadeSimpleConfig">
            <Behavior maxRetries="3"
                      keyspace="MadeSimple"
                      readCL="ONE"
                      writeCL="QUORUM" />

            <Transport type="Framed"
                       port="9160"
                       poolSize="1" />

            <Endpoints strategy="Nearest"
                       snitch="RackInferring">
                <Server>127.0.0.1</Server>
            </Endpoints>
        </Cluster>

        <Cluster name="CustomEndpointStrategyConfig">
            <Behavior maxRetries="3"
                      keyspace="MadeSimple"
                      readCL="ONE"
                      writeCL="QUORUM" />

            <Transport type="Framed"
                       port="9160"
                       poolSize="1" />

            <Endpoints strategy="TestClient.CustomEndpointStrategy, TestClient"
                       snitch="TestClient.CustomSnitch, TestClient">
                <Server>127.0.0.1</Server>
                <Server>127.0.0.2</Server>
            </Endpoints>
        </Cluster>

        <Cluster name="MinimalConfig">
            <Endpoints>
                <Server>127.0.0.1</Server>
            </Endpoints>
        </Cluster>

        <Cluster name="ObjectMapperConfig">
            <Behavior maxRetries="3"
                      readCL="ONE"
                      writeCL="QUORUM"
                      keyspace="twissandra" />

            <Transport type="Framed"
                       port="9160"
                       poolSize="1"
                       cqlver="3.0.0-beta1" />

            <Endpoints strategy="Nearest"
                       snitch="RackInferring">
                <Server>127.0.0.1</Server>
            </Endpoints>
        </Cluster>

    </CassandraSharp>

    <log4net>
        <appender name="ConsoleAppender"
                  type="log4net.Appender.ConsoleAppender">
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline" />
            </layout>
        </appender>
        <root>
            <level value="INFO" />
            <appender-ref ref="ConsoleAppender" />
        </root>
    </log4net>
</configuration>