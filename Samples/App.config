<?xml version="1.0"?>
<configuration>
    <configSections>
        <section name="CassandraSharp" type="CassandraSharp.SectionHandler, CassandraSharp"/>
    </configSections>

    <CassandraSharp>
        <Recovery type="Default" interval="2"/>

        <Cluster name="TestCassandra">
            <Endpoints>
                <Server>localhost</Server>
